{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "BTCPayServer Companion",
  "version": "0.1.0",
  "identifier": "com.michaltakac.btcpayserver-companion",
  "build": {
    "frontendDist": "../out",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "BTCPayServer Companion",
        "width": 1280,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "minWidth": 800,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "category": "Finance",
    "copyright": "Copyright Â© 2025 RandomFour, LLC",
    "shortDescription": "BTCPayServer companion app",
    "longDescription": "A comprehensive dashboard and analytics tool for BTCPayServer, providing insights into revenue, expenses, and profitability for your business.",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.15",
      "exceptionDomain": "",
      "signingIdentity": "-",
      "entitlements": null
    },
    "linux": {
      "deb": {
        "depends": ["webkit2gtk-4.1", "libgtk-3-0", "libayatana-appindicator3-1"],
        "section": "utils",
        "priority": "optional",
        "files": {}
      },
      "appimage": {
        "bundleMediaFramework": true
      },
      "rpm": {
        "depends": ["webkit2gtk4.1", "gtk3", "libappindicator-gtk3"],
        "epoch": 0,
        "release": "1"
      }
    },
    "resources": []
  }
}
